
upstream RP {
    # Path to Unicorn SOCK file, as defined previously
    # server unix:/home/upstill/example/shared/sockets/unicorn.sock fail_timeout=0;
    server unix:/var/sockets/unicorn.RP.sock fail_timeout=0;
}

server {
    listen 80;
    server_name recipepower1;

    root /home/upstill/RecipePower-source/public;

    try_files $uri/index.html $uri @RP;

    location @RP {
        proxy_pass http://RP;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }

    error_page 500 502 503 504 /500.html;
    client_max_body_size 4G;
    keepalive_timeout 10;
}
#
# SSL Settings
#

server {
	listen 443 ssl;
	server_name staging.recipepower.com;

	ssl on;
	ssl_certificate /etc/letsencrypt/live/staging.recipepower.com/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/staging.recipepower.com/privkey.pem; # managed by Certbot

        ssl_session_timeout 10m;

	ssl_protocols TLSv1 TLSv1.1 TLSv1.2; # Dropping SSLv3, ref: POODLE
        ssl_session_cache shared:SSL:10m;

	ssl_ciphers HIGH:!aNULL:!MD5;

	ssl_prefer_server_ciphers on;

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto https;
		proxy_redirect off;
		proxy_pass http://RP;
	}

}
