<tr class="referment_fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :url %>
  <%= f.hidden_field :referee_type %>
  <%= f.hidden_field :referee_id %>
  <td>
    <span class='title'><%= f.object.title %></span><br><span class='url'><%= f.object.url %></span>
    <%# link_to f.object.title.if_present('').truncate(100), f.object.url, target: '_blank'  %>
  </td>
  <!--
  <td><%# f.input :localename, label: false, collection: Expression.locales.collect { |entry| entry[0] } %></td>
  <td><%# f.input :formname, label: false, collection: Expression.forms.collect { |entry| entry[0] } %></td>
-->
  <td>
    <%= f.select :kind, (@available_kinds || PageRefServices.kind_selections) %>
  </td>
  <td>
    <%= f.hidden_field :_destroy, class: 'delete-expression' %>
    <%= link_to "remove", '#', class: "remove_fields", :title => 'Nuke It!' %>
  </td>
</tr>
