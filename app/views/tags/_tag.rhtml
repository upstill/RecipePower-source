<%= javascript_include_tag :defaults %>
<script src="/javascripts/prototype.js" type="text/javascript"></script>
<span id="<%=tag.name%>", class="nukeable_key">
      <%= tag.name %>&nbsp;<%= link_to "x",
	      {	:do=>"remove",
		:id=>@recipe.id,
		:action=>"revise",
		:what=>"Tag",
		:name=>tag.name },
		:remote=>"true",
		:class=>"nukeable_X",
		:onclick=>"this.up('##{tag.name}').remove()" -%>
</span>
