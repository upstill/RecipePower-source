<%# Form for changing the user's password %>
<%= simple_form_for(resource, :as => resource_name, :url => "/users", :html => {class: "edit_password json", :method => :patch, 'data-type' => :json}) do |f| %>
    <%= modal_body do %>
        <%= form_errors_helper f %>
        <%# f.input :current_password, hint: "(we need your current password to confirm your changes)" %>
        <%= f.input :password, :label => "New password", :autocomplete => "off", :autofocus => true %>
        <%# f.input :password_confirmation, :label => "Confirm new password" %>
    <% end %>
    <%= form_actions f, submit_label: "Update Password" do
      button_to_submit( "Sign-in Services", authentications_path, :mode => :modal, class: 'dialog-button dialog-footer-button')+
      button_to_submit( "Profile", users_profile_path(section: "profile"), :mode => :modal, class: 'dialog-button dialog-footer-button')
    end %>
<% end %>
