<% tag_selection = @tag_selection unless defined? tag_selection %>
<%= simple_form_for tag_selection,
                    html: {
                            data: {
                                    :type => :json,
                                    :remote => true
                            },
                            onload: "RP.submit.form_onload(event);"
                    } do |f| %>
    <div class="inline-text-field">
      <%= token_input_field f, "tag", label: "" %>
    </div>
    <%= f.hidden_field :tagset_id %>
    <%= f.hidden_field :user_id %>
    <div class="inline-submit-button">
      <%= f.submit "Save", class: "btn btn-xs btn-success" %>
    </div>
<% end %>