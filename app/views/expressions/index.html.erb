<h3>Listing Expressions</h3>

<table>
  <tr>
    <th>Tag</th>
    <th>Referent</th>
    <th>Form</th>
    <th>Locality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expressions.each do |expression| %>
  <tr>
    <td><%= expression.tag_id %></td>
    <td><%= expression.referent_id %></td>
    <td><%= expression.form %></td>
    <td><%= expression.locale %></td>
    <td><%= link_to_modal 'Show', expression %></td>
    <td><%= link_to_modal 'Edit', edit_expression_path(expression) %></td>
    <td><%= link_to 'Destroy', expression, data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>

