    <hr>
    <div style="width: 200px; padding-left: 10px;">
      <%= render 'authentications/authentications_possible', prompt: "You can create an account using one of these fine services:" %>
    </div>
    <div class="or"><h4>OR</h4></div>
    <%= render "registrations/form" %>
<% end %>