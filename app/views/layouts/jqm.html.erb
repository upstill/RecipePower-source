<!DOCTYPE html>
<html>
  <head>
		<title><%= title %></title>
 		<meta charset="utf-8">
   	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <!--[if lt IE 9]>
	    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
	  <![endif]-->
		<%= favicon_link_tag "/assets/favicon.ico" %>
		<%= stylesheet_link_tag "jqm", :media => "all" %>
		<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
		<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
		<script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
		<%= javascript_include_tag "jqm" %>
		<%= csrf_meta_tag %>
		<%= yield(:head) %>
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-30180298-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); 
				ga.type = 'text/javascript'; 
				ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0];
				s.parentNode.insertBefore(ga, s);
			})();
		</script>
  </head>
  <body>
		<%# This is the standard home screen for mobile %>
		<div data-role="page" id="Home">
		    <div data-role="header" data-position="fixed">
		        <h1>RecipePower</h1>
						<% if content_for? :nav %>
			        <a href="#Nav" >Nav</a>
						<% end %>
						<% if content_for? :seeker_entry %>
							<%= yield :seeker_entry %>
						<% end %>
		        <a href="#Settings" data-transition="slideup" data-icon="gear">Settings</a>
		    </div>
		    <div data-role="content">
						<% if content_for? :home_content %>
							<%= yield :home_content %>
						<% end %>
		    </div>
		    <div data-role="footer" data-position="fixed">
		        <h4>This is a <a href="http://nitch.cc">Nitch</a> app.</h4>
		    </div>
				<% if content_for? :nav %>
			    <div data-role="panel" id="Nav">
		        <h3>Navigation</h3>
		        <p>Peek-a-boo!</p>
						<%= yield :nav %>
		        <a data-role="button" data-rel="close" href="#Home">Close panel</a>
			    </div>
				<% end %>
		</div>
		<%= yield %>
	</body>
</html>
