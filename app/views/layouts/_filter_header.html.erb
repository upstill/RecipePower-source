<%= triggered_form search_path do %>
    <% if @filtered_header && @filtered_presenter.filter_type_selector %>
        <%= select_tag :tagtype, options_from_collection_for_select(Tag.type_selections(true, true), :last, :first, @filtered_presenter.tagtype),
                       :include_blank => false,
                       :onchange => %Q{RP.submit.onselect( event ); } %>
    <% end %>
    <div class="filter-element">
      <%= token_input_query(
                  :hint => "Type food terms and hit Enter or Return",
                  placeholder: "Let's cook up something...") %>
    </div>
<% end %>
