<% feed = decorator.object %>
<%= present decorator, current_user_or_guest do |presenter| %>
    <td class="avatar-column">
      <%= presenter.card_avatar :fallback_img => image_path('Upload_Icon.jpg') %>
    </td>
    <td class="description-column">
      <%= presenter.card_homelink class: "title-link" %>
      <%= collectible_collect_icon decorator, "lg" %>
      <%= feed_subscribe_button feed, :unsub_only => true %>
      <%# feed_homelink feed, feed_wait_msg(feed).merge(truncate: 80) %>
      <hr>
      <%= feed.description %>
    </td>
    <td><%= decorator.extract 'tags' %><%# taggable_list feed %></td>
    <!--<td><%# feed.feedtypename unless feed.feedtypename == "Misc" %></td>-->
    <td><%= link_to_submit feed.site.name, site_path(feed.site), mode: :modal %></td>
    <td><%= feed_status_summary feed %></td>
    <% if response_service.admin_view? %>
        <td>
          <%= feed_approval feed %>
          <br>
          <%= button_to('Destroy',
                        decorator.object_path,
                        :method => :delete,
                        :class => 'btn btn-xs btn-danger',
                        confirm: "This will permanently remove ths #{decorator.human_name} from RecipePower for good: it can't be undone. Are you absolutely sure you want to do this?"
              ) if permitted_to? :delete, :feeds %>
        </td>
    <% end   %>
        <td class="actions-column">
          <%= collectible_buttons_panel decorator, :except => [:tag] do %>
              <%# feed_subscribe_button feed, options %>
          <% end %>
<%# feed_collectible_buttons decorator, vote_button: true, edit_button: response_service.admin_view? %>
        </td>
    <% end %>
