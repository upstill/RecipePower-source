<% @decorator = @recipient.shared.decorate %>
<% if attachments['collectible_image'] %>
    <div class="share_recipe_pic_box">
      <%= image_tag attachments['collectible_image'].url -%>
    </div>
<% end %>
<br>
<%= link_to @decorator.title, (accept_invitation_link ?
        polymorphic_url(@decorator.object, mode: :modal, :accept_invitation_link => accept_invitation_link) :
        @decorator.url),
            class: "share_recipe_title" %>
<p>from&nbsp;
  <%= link_to @decorator.sourcename,
              divert_user_invitation_url(
                      rpevent: RpEvent.event_trigger_data(@recipient, :invitation_diverted, @invitation_event, @sender),
                      url: CGI::escape(@decorator.sourcehome),
                      sender: @sender.id,
                      recipient: @recipient.id),
              class: "share_recipe_source" %></p>
