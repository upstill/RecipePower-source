<!-- View for listing entities in a table -->
<div class="stream-shell">
  <table class="table table-striped ">
    <thead>
    <tr>
      <%= headers.collect { |ttl| "<th>#{ttl}</th>" unless ttl.blank? }.compact.join("\n").html_safe %>
    </tr>
    </thead>
    <tbody class="stream-items-parent">
    <% if @sp.dump? %>
        <% while (item = @sp.next_item) do %>
            <%# render_stream_item item %>
            <%= render partial: "show_table_row", locals: { :item => item } %>
        <% end %>
    <% end %>
    </tbody>
  </table>
  <%= render "stream_footer" %>
</div>