<div class="auth_poss <%# @_area %><%= response_service.area_class %>">
  <% if @auth_context == :manage %>
    <% if current_user %>
      <strong class="prompt"><%= @authentications.empty? ? "Click on a service you'd like" : "Add another service" %> to sign in with:</strong><br>
    <% else %>
      <strong class="prompt">You can sign in with one of these services:</strong><br><br>
    <% end %>
  <% else %>
    <strong class="prompt">Or, sign in using one of these fine services:</strong><br>
  <% end %>
  <%= auth_possible "Facebook" %>
  <%= auth_possible "Google", :svc_lower => "google_oauth2" %>
  <%= auth_possible "Twitter" %>
  <%= auth_possible "Aol" %>
  <%= auth_possible "Yahoo" %>
  <%= auth_possible "OpenID", :svc_lower => "open_id" %>
</div>
