<div class="stream-header">
  <% unless @sp.query.blank? %>
      <div class="form-group" style="display:inline-block">
        <form class="form-search tagtype_form" action="<%= @sp.query partial: true %>" data-format="json">
          <h3>References of type:
            <%= select_tag :type, options_from_collection_for_select(Reference.type_selections(true), :last, :first, @sp.param(:type)) || 0,
                           :include_blank => true,
                           :onchange => %Q{RP.stream.tagchange( "form.tagtype_form" ); } %>
          </h3>
        </form>
      </div>
  <% end %>
  <%= link_to 'New Reference', new_reference_path %>
</div>