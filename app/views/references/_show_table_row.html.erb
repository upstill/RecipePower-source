<tr>
	<td>
		<%= item.type.sub 'Reference', '' %>
	</td><td>
		<%= link_to item.url, item.url %>
		<%= reference_expressions item %>
	</td><td>
		<%= link_to_modal 'Show', reference_path(item) %>
	</td>
	<% if permitted_to? :edit, item %>
		<td><%= link_to_modal 'Edit', edit_reference_path(item) %></td>
		<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
</tr>
