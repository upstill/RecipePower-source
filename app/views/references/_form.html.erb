<%= simple_form_for(@reference) do |f| %>
  <%= modal_body do %>
    <%= form_errors_helper f %>

    <%= f.input :reference_type, collection: Reference.type_selections %>
    <%= f.input :url %>

  <% end %>
  <%= modal_footer do %>
    <%= form_actions f, cancel_path: references_path %>
  <% end %>
<% end %>
