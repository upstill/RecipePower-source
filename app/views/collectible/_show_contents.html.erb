<% NestedBenchmark.measure '...content' do %>
  <div class="card-content" style="width:100%">
    <% if decorator.object.is_a?(Recipe) %>
      <% if policy(decorator.object).update? %>
        <%= recipe_page_button decorator.object %>
        <%= button_to_submit '',
                             edit_recipe_contents_path(decorator.object),
                             'glyph-edit-red',
                             'xl',
                             mode: :modal,
                             class: 'annotate-content',
                             title: 'Annotate Content' %>
        <%# collectible_edit_button decorator.object %>
      <% end %>
      <div id="rp-html-content">
        <%= presenter.card_content&.html_safe %>
      </div>
    <% end %>
  </div>
<% end %>
