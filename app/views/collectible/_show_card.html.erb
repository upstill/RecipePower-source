<% viewparams = @viewparams || (@filtered_presenter && @filtered_presenter.viewparams) unless defined?(viewparams) && viewparams %>
<%= present decorator, current_user_or_guest do |presenter| %>
    <div class="container-fluid card-item card-grid js-masonry entity-card <%= viewparams.display_style %>-card <%= decorator.dom_id %>"
         onload="RP.masonry.onload(event)"
         data-masonry-options='{
            "gutter": 10,
            "itemSelector": ".grid-item",
            "stamp": ".stamp" }'>
      <!--"columnWidth": 200,-->
      <!--onload="RP.masonry.onload(event)"-->
      <div class="stamp avatar card-column" <%= 'style=display:none' if !(presenter.card_video? || presenter.card_avatar?) %>>
        <%= presenter.card_video? ? presenter.card_video : presenter.card_avatar %>
      </div>
      <div class="stamp title">
        <%= collectible_vote_buttons decorator.object, class: 'stamp votes' if presenter.votable_from_card? %>
        <%= presenter.card_homelink class: 'title-link' %>
        <%= collectible_edit_button decorator if presenter.editable_from_card? %>
        <%= collectible_collect_button decorator if presenter.collectible_from_card? %>
        <%= presenter.card_aspect_rendered :description %>
      </div>
      <% presenter.rendered_aspects( except: [:title, :description] ) do |aspect, content | %>
          <div class="grid-item card-column <%= aspect %>">
            <%= content %>
          </div>
      <% end %>
      <div class="lower-content">
        <%= collectible_tools_menu decorator, 'lg' if presenter.editable_from_card? || response_service.admin_view? %>
        <%= collectible_share_button decorator, 'lg' if presenter.sharable_from_card? %>
      </div>
    </div>
    <div class="container-fluid card-item entity-card <%= viewparams.display_style %>-card <%= decorator.dom_id %>">
      <%= collectible_vote_buttons decorator.object unless decorator.object == response_service.user %>
      <table style="width: 100%">
        <tr>
          <% if vid = presenter.card_video %>
              <td rowspan="2" class="video-box">
                <%= vid %>
              </td>
          <% else %>
              <td rowspan="2" class="pic-box" <%= 'style=display:none' if !presenter.card_avatar? %> >
                <div class="pic-inset">
                  <%= presenter.card_avatar %>
                </div>
              </td>
          <% end %>
          <td valign="top" class="upper-content">
            <div class="title">
              <%= presenter.card_homelink class: 'title-link' %>
              <%= collectible_collect_button(decorator, 'lg') unless decorator.object == response_service.user %>
              <%# collectible_list_menu decorator, response_service.user, {} %>
            </div>
            <div class="row">
              <% if collector = decorator.first_collector %>
                  <div class="col-sm-4 col-xs-4 col-md-3 col-lg-2">
                    <h3>FOUND BY</h3>
                    <%= present collector, nil do |cp| %>
                        <span class="owner-name"><%= user_homelink collector%><br></span>
                        <div class="owner-pic">
                          <%= cp.card_avatar %>
                        </div>
                    <% end %>
                  </div>
              <% end %>
              <div class="<%= collector ? 'col-sm-8 col-xs-8 col-md-9 col-lg-10' : 'col-md-12' %>">
                <div class="tags">
                  <% if (tags = decorator.tags).present? %>
                      <h3>TAGS</h3>
                  <% end %>
                  <%= presenter.present_field_wrapped 'tags' %>
                </div>
                <div class="lists">
                  <% if (lists = presenter.present_field('lists')).present? %>
                      <h3>AS SEEN IN TREASURIES</h3>
                  <% end %>
                  <%= lists %>
                </div>
                <p class="description"><%= decorator.description %></p>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td valign="bottom" class="lower-content">
            <%# collectible_upload_button decorator, 'lg' %>
            <%= collectible_tools_menu decorator, 'lg' %>
            <%# collectible_edit_button decorator, 'lg' %>
            <%= collectible_share_button decorator, 'lg' unless decorator.object == response_service.user %>
          </td>
        </tr>
      </table>
    </div>
<% end %>

