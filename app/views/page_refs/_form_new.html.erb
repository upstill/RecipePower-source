<%= simple_form_for(page_ref.becomes(PageRef)) do |f| %>
    <%= form_errors_helper f %>

    <div class="form-inputs">
      <%= f.input :type,
                  :collection => PageRefServices.type_selections,
                  :include_blank => false,
                  :label_method => :first,
                  :value_method => :last,
                  :label => "Type" %>
      <%= f.input :url,
                  :as => :string,
                  required: true,
                  input_html: { type: 'url' } %>
    </div>

    <%= dialog_submit_button %>
    <%= dialog_cancel_button %>
<% end %>
