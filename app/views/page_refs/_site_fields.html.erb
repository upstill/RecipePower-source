<%= pr_builder.fields_for :site do |site_builder| %>
  <div class='label-enclosure'>
    <%= site_builder.label :trimmers, 'Trimmers' -%>
  </div>
  <%= site_builder.text_area :trimmers_str,
                  :class => 'trimmers',
                  :id => @decorator.element_id(:trimmers_str),
                  :label => false,
                  :placeholder => "CSS Selectors for elements to remove from pages" %>

  <div class='label-enclosure' style="margin-top:.5em">
    <%= site_builder.label :recipe_selector, 'Selector for Recipe Start' -%>
  </div>
  <%= site_builder.text_field :recipe_selector %>

  <div class='label-enclosure' style="margin-top:.5em">
    <%= site_builder.label :selector_string, 'Selector(s) for Content' -%>
  </div>
  <%= site_builder.text_field :selector_string %>

  <div class='label-enclosure' style="margin-top:.5em">
    <%= site_builder.label :title_selector, 'Title Selector' -%>
  </div>
  <%= site_builder.text_field :title_selector %>

  <div class='label-enclosure' style="margin-top:.5em">
    <%= site_builder.label :inglist_selector, 'Ingredient List Selector' -%>
  </div>
  <%= site_builder.text_field :inglist_selector %>

  <div class='label-enclosure' style="margin-top:.5em">
    <%= site_builder.label :ingline_selector, 'Ingredient Line Selector' -%>
  </div>
  <%= site_builder.text_field :ingline_selector %>
<% end %>
