<div class="row">
  <div class="col-md-6">
    <%= render "authentications/possible", intention: "signup", prompt: "Sign up with one of these:" %>
  </div>
    <div class="col-md-6">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%# devise_error_messages! %>
        <%= form_errors_helper f, resource %>
        <div class="row">
          <div class="col-md-8">
            <%# f.input :username, label: "Username (Handle)", placeholder: "CoolBeans" %>
            <%= f.input :email, label: nil, placeholder: 'user@domain.com' %>
          </div>
          <div class="col-md-3">
            <%# f.input :fullname, label: "Full Name", placeholder: "Joe Cool" %>
            <%# f.input :password %>
            <%= f.submit "Sign me up!", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
