<%= javascript_include_tag 'jquery.panelSnap' %>
<script type="text/javascript">
    jQuery(function ($) {
        $('body').panelSnap( {
            panelSelector: 'section.snap-panel',
        onActivate: function (a, b) {
            RP.slider.startScroll($('div.track', a)[0])
        }}) ;
    });
</script>
<div class="panels">
  <section class="snap-panel panel-one">
    <div class="panel-elements">
      <p class="panel-title">RecipePower is Here</p>
      <p class="panel-subtitle">Cooks Together, Taming the Web.</p>
      <p class="panel-description">Keep your finds from anywhere and<br/>pool them with our community.</p>
    </div>
  </section>
  <section class="snap-panel panel-three">
    <div class="panel-elements">
      <p class="panel-title">Recipes</p>
      <p class="panel-subtitle">If it works, why throw it back?</p>
      <p class="panel-description">Clip and save the best recipes you've found <br/>on the web, and share them around
        here.</p>
    </div>
    <%# render 'lists/pano', list: List.find(658)  %>
    <%= render 'lists/pano', list: List.find(3)  %>
  </section>
  <section class="snap-panel panel-four">
    <div class="panel-elements">
      <p class="panel-title">Cookmates</p>
      <p class="panel-subtitle">Join our community of dessert<br/>bakers & dinner party makers.</p>
      <p class="panel-description-long">Invite your real life sous chefs<br/>and hear about what they're cooking up.</p>
    </div>
    <%# render 'lists/pano', list: List.find(659) %>
    <%= render 'lists/pano', list: List.find(3)  %>
  </section>
  <section class="snap-panel panel-two">
    <div class="panel-elements">
      <p class="panel-title">Lists</p>
      <p class="panel-subtitle">Browse and contribute to our favorites.</p>
      <p class="panel-description">A tool to create, contribute to and discover<br/>communities focused on specific
        interests.</p>
    </div>
    <%# render 'lists/pano', list: List.find(660) %>
    <%= render 'lists/pano', list: List.find(3)  %>
  </section>
  <section class="snap-panel panel-three">
    <div class="panel-elements">
      <p class="panel-title">Feeds</p>
      <p class="panel-subtitle">New ideas come to you.</p>
      <p class="panel-description">Subscribe to food blogs and columns <br/>from all over the world.</p>
    </div>
    <%# render 'lists/pano', list: List.find(661) %>
    <%= render 'lists/pano', list: List.find(3)  %>
  </section>
</div>

<% if false %>
    <div class="centerblock" style="margin-top:50px;">
      <div style="position:absolute; bottom: 0px; height: 75px;"><%= image_tag "cookmark_button.png", style: "float: left; height:59px; width: 70px;", alt: "Cookmark" %></div>
      <div style="position:absolute; bottom: 0px; left: 90px; height: 55px;"><span class="logo">RecipePower</span></div>
    </div>
    <div class="centerblock sub">Leave the Junk Behind</div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 ">
        <p>
          <large>The Internet is a treasure-house for cooks...IF you can get past the junk and hold on to the winners.
            Keep your finds here and
            help our community build the Fort Knox of kitchen knowledge--all gold.
            Recipes are just the beginning.
          </large>
        </p>
      </div>
    </div>
    <div class="centerblock">
<% end %>
<% if current_user %>
    <%= link_to("To My Collections!!", collection_user_path(current_user), class: "btn btn-lg btn-info") %>
<% else %>
    <%= signup_button %>
<% end %>
<% if false %>
    </div>
    <div class="need_to_know page">
      <%= render "pages/need_to_know_content" %>
    </div>
<% end %>
