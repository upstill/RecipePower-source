<%# render partial: 'authentications/sidebar' %>
<%= modal_dialog :edit_invitation, "Come on In to RecipePower" do %>
    <p>We're glad you've come!</p>
    <p>Now, if you'll just provide a couple of details, you're good to go.</p><br>
    <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f| %>
        <%= form_errors_helper f %>
        <%= f.hidden_field :invitation_token %>
        <%= f.input :username, label: %q{User name <span style="font-weight:normal;">(your handle on RecipePower)</span>} %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :password, label: %Q{Password <span style="font-weight:normal;">(same as your email ('#{resource.email}') unless you specify otherwise)</span>} %>
        <%= modal_footer do %>
            <%= f.submit "Bring it on", class: "btn btn-lg btn-success dialog-submit-button" %>
        <% end %>
    <% end %>
<% end %>
