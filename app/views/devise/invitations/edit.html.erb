<%# render partial: 'authentications/sidebar' %>
<%= modal_dialog :edit_invitation, "Come on In to RecipePower" do %>
    <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f| %>
        <div class="row">
          <div class="col-md-12">
            <p>We're glad you've come!</p>
            <p>Now, just quickly confirming your details...</p><br>
            <%= form_errors_helper f %>
          </div>
        </div>
        <%= f.hidden_field :invitation_token %>
<!--
        <div class="row">
          <div class="col-md-6">
            <%# f.input :first_name, autofocus: true %>
          </div>
          <div class="col-md-6">
            <%# f.input :last_name %>
          </div>
        </div>
-->
        <div class="row">
          <div class="col-md-12">
            <%= f.input :username, label: %q{User name <span style="font-weight:normal;">(your unique handle on RecipePower)</span>}.html_safe %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :email %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :password, autofocus: true, placeholder: resource.email %>
          </div>
        </div>
        <%= modal_footer do %>
            <%= f.submit "Bring it on", class: "btn btn-lg btn-success dialog-submit-button" %>
        <% end %>
    <% end %>
<% end %>
