<%= simple_form_for resource, :as => resource_name, :url => password_path(resource_name), html: { class: "password-reset json", 'data-type' => :json } do |f| %>
    <%# form_errors_helper f %>
    <%= modal_body do %>
        <%= f.input :login, label: false, autofocus: true, placeholder: "Username or Email (your choice)" %>
    <% end %>
    <%= modal_footer do %>
        <%= f.submit "ENTER", class: "btn btn-lg dialog-submit-button"%>
    <% end %>
<% end %>
