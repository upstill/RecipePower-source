<% resource.email = @user.email if @user %>
<%= simple_form_for resource,
                    :as => resource_name,
                    :url => password_path(resource_name, :mode => response_service.mode),
                    html: { class: "password-reset json", 'data-type' => :json } do |f| %>
    <p><%= defined?(alert_msg) ? alert_msg : flash_usurp %></p>
    <p>Simply provide your RecipePower id and we'll email you a password-reset link.</p>
    <%= f.input :login, label: false, autofocus: true, placeholder: "Username or Email (your choice)" %>
    <%= f.submit "ENTER", class: "btn btn-xl dialog-submit-button dialog-button free" %>
<% end %>
