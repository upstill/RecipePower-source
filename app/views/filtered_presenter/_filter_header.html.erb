<%= triggered_form(viewparams.filter_query) do %>
    <h2 class="filter-element"><%= viewparams.title %></h2>
    <% if viewparams.filter_type_selector %>
        <div class="filter-element" style="margin-bottom: 10px;">
          <%= select_tag :tagtype, 
			             options_from_collection_for_select(Tag.type_selections(true, true),
                                                            :last,
                                                            :first,
                                                            viewparams.tagtype),
                         :include_blank => false,
                         :onchange => %Q{RP.submit.onselect( event ); } %>
        </div>
    <% end %>
    <div class="filter-element">
      <%= viewparams.filter_field %>
    </div>
<% end %>
