<% if response_service.injector? %>
	<% prompt = "has added this to your collection. Tag it here if you like. (Or " %>
	<% prompt << link_to("not", "#", id: "retire_iframe", remote: true) %>
	<%= injector_dialog :edit_recipe, (prompt+")").html_safe, noflash: true, dismiss_button: false do %>
		<%= render "form_edit_injector" %>
	<% end %>
<% elsif response_service.dialog? %>
	<%= render "form_edit_at_left", recipe: @recipe %>
<% else %>
    <%= render "form_edit_page", recipe: @recipe %>
<% end %>
