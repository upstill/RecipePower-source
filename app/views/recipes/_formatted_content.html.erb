<h2><%= presenter.decorator.title %></h2>
<% presenter.content_for(:rp_yields) do |html| %>
  <p>Yield: <%= html %></p>
<% end %>
<% presenter.content_for(:rp_author) do |html| %>
  <p>Author: <%= html %></p>
<% end %>
<% presenter.content_for(:rp_inglist) do |html, label=nil| %>
  <% if label.nil? %>
    <h3>Ingredients</h3>
  <% else %>
    <h4><%= label %></h4>
  <% end %>
  <ul class="rp_inglist">
    <%= html %>
  </ul>
<% end %>
<h3>Instructions</h3>
<ul>
  <% presenter.present_instructions do |line| %>
    <%= line %>
  <% end %>
</ul>
