<%= present decorator, current_user_or_guest do |presenter| %>
    <% dlgopts = wide ? {dialog_class: "modal-xl"} : {} %>
    <%= modal_dialog "show_recipe", presenter.present_field("rcpTitleLink"), dlgopts.merge(title: presenter.present_field("rcpTitle"), class: "historic") do %>
        <%= render_item decorator, :card %>
    <% end %>
<% end %>
