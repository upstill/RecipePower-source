<% wide = (field_value "rcpVideo") || !(field_value "rcpPicURL").blank? %>
<% dlgopts = wide ? {dialog_class: "modal-xl" } : {} %>
<%= modal_dialog "show_recipe", present_field("rcpTitleLink"), dlgopts.merge(title: present_field("rcpTitle"), class: "historic") do %>
    <%= render "show", wide: wide %>
<% end %>