<%= simple_form_for(@mercury_page) do |f| %>
  <%= form_errors_helper f %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :date_published %>
    <%= f.input :lead_image_url %>
    <%= f.input :domain %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
