<% item ||= @image_reference %>
<tr>
	<td>
		<%= link_to item.url, item.url %>
		<%= image_reference_expressions item %>
	</td><td>
		<%= link_to_dialog 'Show', image_reference_path(item) %>
	</td>
	<% if policy(item).edit? %>
		<td><%= link_to_dialog 'Edit', edit_image_reference_path(item) %></td>
		<td><%= link_to_submit 'Destroy', item, method: :delete, confirm: 'Are you sure?' %></td>
	<% end %>
</tr>
