<% site = decorator.object %>
<%= present decorator, current_user_or_guest do |presenter| %>
    <td class="avatar-column">
      <%# image_enclosure decorator, :fallback_img => image_path('Upload_Icon.jpg') %>
      <%= presenter.card_avatar :fallback_img => image_path('Upload_Icon.jpg') %>
    </td>
    <td class="description-column">
      <%= presenter.card_homelink class: 'title-link' %>
      <%= collectible_collect_button decorator, 'lg'  %>
      <br><%= site.description %>
    </td>
    <td>
      <b>Home</b>: <%= link_to site.home, site.home, class: 'tablink' %><br>
      <b><%= show_sample site %></b><br>
      <%= site_feeds_summary site %>
    </td>
    <td class="actions-column">
      <%= collectible_buttons_panel @decorator, 'xl', :tools_menu => true do %>
          <%# link_to_submit "Scrape for feeds", scrape_site_path(@site), options.merge(:method => :post) if response_service.admin_view? %>
      <% end %>
      <br>
      <%= site_similars site if response_service.admin_view? %><br>
    </td>
<% end %>