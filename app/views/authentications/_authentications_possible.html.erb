<div class="auth_poss <%# @_area %><%= response_service.area_class %>" style="overflow: visible">
  <% if @auth_context == :manage %>
    <% if current_user %>
      <strong class="prompt"><%= @authentications.empty? ? "Click on a service you'd like" : "Add another service" %> to sign in with:</strong><br>
    <% else %>
      <strong class="prompt">You can sign in with one of these services:</strong><br><br>
    <% end %>
  <% else %>
    <h4>Or, sign in using one of these fine services:</h4>
  <% end %>
    <div class="row">
      <div class="col-md-2 auth"><%= auth_possible "Facebook" %></div>
      <div class="col-md-2 auth"><%= auth_possible "Google", :svc_lower => "google_oauth2" %></div>
      <div class="col-md-2 auth"><%= auth_possible "Twitter" %></div>
      <div class="col-md-2 auth"><%= auth_possible "Aol" %></div>
      <div class="col-md-2 auth"><%= auth_possible "OpenID", :svc_lower => "open_id" %></div>
      <div class="col-md-2 auth"><%= auth_possible "Yahoo" %></div>
    </div>
</div>
