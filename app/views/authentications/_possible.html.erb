<% prompt ||= "You can sign in using one of these fine services:" %>
<% origin ||= nil %>
<% intention ||= nil # Set to 'signup' if creating a new account %>
<div class="auth_poss <%= response_service.area_class %>" style="overflow: visible">
  <h4><%= prompt.html_safe %></strong></h4><br>
  <div class="row">
    <%= auth_possible "Facebook", origin, intention %>
    <%= auth_possible "Google", origin, intention, :svc_lower => "google_oauth2" %>
    <%= auth_possible "Twitter", origin, intention %>
    <%= auth_possible "Aol", origin, intention %>
    <%= auth_possible "OpenID", origin, intention, :svc_lower => "open_id" %>
    <%= auth_possible "Yahoo", origin, intention %>
  </div>
</div>
