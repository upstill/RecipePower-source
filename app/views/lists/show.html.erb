<div class="row">
  <div class="col-md-12">
    <% title = (@list.owner == current_user) ? @list.name : "#{@list.owner.handle}'s '#{@list.name}' list" %>
    <%= tag_filter_header title: title %>

    <p>
      <%= @list.description %>
    </p>

    <p>
      <%= @list.notes %>
    </p>

    <% unless (enum = tag_list ListServices.new(@list).pulled_tags).blank? %>
        <p>
          This list includes everything tagged with <%= enum %>.
        </p>
    <% end %>

    <%= collectible_buttons_panel @decorator, :edit_button => (@list.owner == current_user) %>
  </div>
</div>
<%= render "shared/stream_results_placeholder" %>
