upstream unicorn {
  server unix:/tmp/unicorn.<%= fetch :application %>.sock fail_timeout=0;
}

error_log /var/www/<%= fetch :application %>/shared/log/nginx.log debug;

server {
      listen 173.255.245.80:80;
      server_name staging.recipepower.com;

      location / {
          rewrite ^ https://$server_name$request_uri permanent;
      }
}

server {
  listen 443 ssl;
  ssl_certificate      /srv/ssl/nginx.pem;
  ssl_certificate_key  /srv/ssl/nginx.key;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 10m;
  root <%= current_path %>/public;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @unicorn;
  location @unicorn {
    proxy_set_header   X-Forwarded-Proto https;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
